@model PasswordResetViewModel
@{
    ViewData["Title"] = "ForgetPassword";
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="row">
    <div class="col-md-4 offset-md-4 ">
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>
        <div class="alert alert-info">Şifre yenileme linki e-postanıza gönderilecektir.</div>
        <form method="post">
            <div class="row mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
</div>
